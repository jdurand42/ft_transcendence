<div class="guildBlock" id="warBlock">
{{#if war}}
<div class="current-war">
	<div class="scores">
		<div class="from-name">{{fromName}}</div>
		<div class="from-score">{{fromScore}}</div>
		<div class="vs">VS</div>
		<div class="on-score">{{onScore}}</div>
		<div class="on-name">{{onName}}</div>
	</div>
	<div class="war-informations">
		<div class="war-informations-container">
			<div class="war-informations-title">War informations</div>
			<div class="arrow-icon-container">
				<img src="./icons/arrow_down-white.svg" class="arrow-icon">
			</div>
		</div>
		<div class="war-infos" style="display: none;">
			<div class="war-schedule-container">
				<div class="war-schedule-title">War schedule</div>
				<div class="schedule-icon-container">
					<img src="./icons/schedule-yellow.svg" class="schedule-icon">
				</div>
				<div class="war-time">
					<div class="war-start">{{warStart}}</div>
					<div class="hyphen">-</div>
					<div class="war-end">{{warEnd}}</div>
				</div>
				<div class="timer" id="war-timer"></div>
			</div>
			<div class="war-rules-container">
				<div class="war-rules-title">War rules</div>
				<div class="war-rules-sub-container">
					<div class="win-reward">
						<div class="win-reward-title">Win reward</div>
						<div class="win-reward-points-container">
							<div class="icon-reward-container">
								<img src="./icons/cup.svg">
							</div>
							<div class="points">{{prize}} points</div>
						</div>
					</div>
					<div class="accontable-matches">
						<div class="accontable-matches-title">Accountable matches</div>
						<div class="ladder-container">
							<div class="ladder-icon-container">
								<img src="{{ladderIcon}}" class="check ladder-icon">
							</div>
							<div class="ladder-name">Ladder</div>
						</div>
						<div class="tournaments-container">
							<div class="tournaments-icon-container">
								<img src="{{tournamentsIcon}}" class="check tournaments-icon">
							</div>
							<div class="tournaments-name">Tournaments</div>
						</div>
						<div class="interguild-container">
							<div class="interguild-icon-container">
								<img src="./icons/check_circle-yellow.svg" class="check interguild-icon">
							</div>
							<div class="tournaments-name">Tournaments</div>
						</div>
					</div>
				</div>
			</div>
			<div class="war-time-rules-container">
				<div class="war-time-rules-title">War times rules</div>
				<table class="war-time-table">
					<tr>
						<th class="schedule-th">Schedule</th>
						<th class="max-unanswered-th">Max unanswered<br>matches</th>
						<th class="tta-th">Time to answer</th>
					</tr>
				{{#each warTime}}
				<tr class="each-war-time">
					<td class="schedule-td">
						<div class="start">
							<div class="day">{{startDay}}</div>
							<div class="hour">{{startHour}}</div>
						</div>
						<div class="hyphen">-</div>
						<div class="end">
							<div class="day">{{endDay}}</div>
							<div class="hour">{{endHour}}</div>
						</div>
					</td>
					<td class="max-unanswered-td">{{maxUnanswered}}</td>
					<td class="tta-td">{{tta}} min</td>
				</tr>
				{{/each}}
				</table>
				</div>
			</div>
		</div>
		<div class="fights-container">
			<div class="timer-war-time-container">
				<div class="next-war-time-in">Next war time in</div>
				<div class="timer"></div>
			</div>
			<div class="nb-matches-missed-container">
				<div class="nb-matches-missed-title">Number of matches calls missed during this war time:</div>
				<div class="matches-missed">
					<div class="from-matches-missed">
						<div class="from-name">{{fromName}}</div>
						<div class="hyphen">-</div>
						<div class="from-nb-matches-missed">{{nbFromMissed}}</div>
					</div>
					<div class="on-matches-missed">
						<div class="on-name">{{onName}}</div>
						<div class="hyphen">-</div>
						<div class="on-nb-matches-missed">{{nbOnMissed}}</div>
					</div>
				</div>
				<div class="random-fight">
					<div class="title">{{randomFight}}</div>
					<div class="button-timer">
						<button class="accept-random-fight">{{accept}}</button>
						<div class="timer" id="war-time-timer"></div>
					</div>
				</div>
			</div>
		</div>
		<div class="last-matches-container">
			<div class="last-matches-title">Last matches of war times</div>
			{{#each lastMatches}}
			<div class="match-done-container">
				<div class="match-done">
					<div class="nb">{{nb}}</div>
					<div class="center">
						<div class="not-forfeit">
							<div class="image-nickname" onclick="window.location='#profile/{{opponentId1}}/';">
								<div class="opponent opponent1">{{opponent1}}</div>
								<div class="image-container">
									<img class="image-url" src="{{avatarOpponent1}}">
								</div>
							</div>
							<div class="score score1">{{score1}}</div>
							<div class="VS">VS</div>
							<div class="score score2">{{score2}}</div>
							<div class="image-nickname" onclick="window.location='#profile/{{opponentId2}}/';">
								<div class="image-container">
									<img class="image-url" src="{{avatarOpponent2}}">
								</div>
								<div class="opponent opponent2">{{opponent2}}</div>
							</div>
						</div>
					{{#if forfeit}}
					<div class="forfeit">Victory by forfeit</div>
					{{/if}}
					</div>
				</div>
			</div>
			{{/each}}
		</div>
	</div>
</div>
{{/if}}
{{#unless war}}
	<div class="no-current-war">NO WAR CURRENTLY GOING ON</div>
{{/unless}}
</div>
