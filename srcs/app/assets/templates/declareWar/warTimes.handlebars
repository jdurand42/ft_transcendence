<div class="warTimes declareWar" id="warSchedule">
    <a class="close" id="closeDeclareWar" href='#guild/{{onId}}'>
        <img src="./icons/esc.svg">
    </a>
    <div class="title">VS
        <div class="guildsName from">{{fromName}}</div>
        <div class="guildsName on">{{onName}}</div>
    </div>
    <div class="declareMiddle warRulesMiddle">
        <div class="declareWarTitle warTimesTitle">War times</div>
        <table class="war-times-table">
            <tr>
                <th></th>
                <th></th>
                <th></th>
                <th></th>
                <th></th>
                <th></th>
                <th></th>
                <th>                    
                    {{!-- <div class="sub-title max-unanswered-title"> --}}
                        Max<br>unanswered<br>matches
                        {{!-- </div> --}}
                </th>
                <th>                    
                    {{!-- <div class="sub-title time-to-answer-title"> --}}
                        Time<br>to answer<br>(min)
                        {{!-- </div> --}}
                </th>
                <th></th>
            </tr>
            <div class="all-war-times" id="all-war-times">
            {{#each warTime}}
            <tr class="{{index}}">
                <td>
                    <div class="filter filter-days" id="filter-days-from-{{index}}" for={{index}}> 
                        <div class="day-name" id="day-name-from-{{index}}">
                            {{fromDay}}
                        </div>
                        <div class="arrow-down-container">
                            <img src='./icons/arrow_down-black.svg' class="arrow-down"></img>
                        </div>
                        <div class="list-days" id="filter-days-from-{{index}}-open" style="display: none;">
                        {{#each days}}
                        <div class="day" id="from-{{index}}" for="{{index}}">{{day}}</div>
                        {{/each}}
                        </div>
                    </div>
                </td>
                <td class="td-text-input">
                    <div class="text-input">From</div>
                </td>
                <td class="td-inputHH">
                    <input type="text" class="inputHH inputWarTimes hh" id="fromHH{{index}}" placeholder="HH" maxlength="2"></input>
                </td>
                <td class="td-inputHH">
                    <input type="text" class="inputHH inputWarTimes mm" id="fromMM{{index}}" placeholder="MM" maxlength="2"></input>
                </td>
                <td class="td-text-input">
                    <div class="text-input">To</div>
                </td>
                <td class="td-inputHH">
                    <input type="text" class="inputHH inputWarTimes hh" id="toHH{{index}}" placeholder="HH" maxlength="2"></input>
                </td>
                <td class="td-inputHH">
                    <input type="text" class="inputHH inputWarTimes mm" id="toMM{{index}}" placeholder="MM" maxlength="2"></input>
                </td>
                <td class="td-input">
                    <input type="text" class="input inputWarTimes max-unanswered" id="max-unanswered" value="{{maxUnanswered}}"></input>
                </td>
                <td class="td-input">
                    <input type="text" class="input inputWarTimes time-to-answer" id="time-to-answer" value="{{timeToAnswer}}"></input>
                </td>
                <td>
                    <div class="minus-circular-container" id="minus-circular-container" for="{{index}}">
                        <img src="./icons/minus-circular.svg" class="minus-circular"></img>
                    </div>
                </td>
            </tr>
            {{/each}}
            </div>
        </table>
        <div class="add-war-time" id="add-war-time">
            <a class="add-war-time-container" id="add-war-time-container">
                <img src="./icons/plus.svg" class="add-war-time-icon">
            </a>
            Add war time
        </div>
    </div>
    <p id="error" style="display: none;"></p>
    <div class="buttons">
        <button class="button prev prevWarTimes">Previous</button>
        <button class="button next validateWarTimes">Validate</button>
    </div>
</div>