<div class="closeParams exitButton" id="ManageGuildExitButton" onclick="window.location='#guild/{{this.guild.id}}';">
	<img src="./icons/esc.svg" class="">
</div>
<div id="manageGuildContentContainerEl">
<div class="manageGuildTitle">
	<div class="title">
	<span id="guildNameIntro"> ADMIN MODE:
		<a href="#guild/{{this.guild.id}}/">{{this.guild.name}}</a>
	</span> <span>[{{this.guild.anagram}}]</span>
	<div id='manageGuildErrorDiv'></div>
	</div>
</div>


	<div class="manageGuildForm">
	<div class="subtitle">GUILD NAME</div>
	<label for="guildName">
	<div>	<input id="guildName" class="manageGuildTextInput" type="text"></input> </div>
	</label>
	<div id="nameError" class="errorMessage"></div>
	<div><button class="updateGuildName save">Save</button></div>
	<div></div>
	<div class="subtitle">ANAGRAM (only capitale letters)</div>
	<label for="guildAnagram">
		<div><input id="guildAnagram" class="manageGuildTextInput" type="text"></input></div>
	</label>
	<div id="anagramError" class="errorMessage"></div>
	<div><button class="updateGuildAnagram save">Save</button></div>
	<div></div>
	</div>




	<div class="manageGuildForm">

		<div>OFFICERS</div>
		<ul class="manageGuildMembersList" id="officersList">
			{{#each this.officers}}
			<li>
				<div class="image-container">
					<img class="memberProfilePicture" src={{this.image_url}}></img>
				</div>
				<span>{{this.nickname}}</span><button class="button" id="relegateMember" value="{{this.id}}">Relegate</button>
			</li>
			{{/each}}
		</ul>

		<div>MEMBERS</div>
		<ul class="manageGuildMembersList" id="membersList">
			{{#each this.members}}
			<li>
				<div class="image-container">
					<img class="memberProfilePicture" src={{this.image_url}}></img>
				</div>

				<span>{{this.nickname}}</span><button class="button" id="promoteMember" value="{{this.id}}">Promote</button>
			</li>
			{{/each}}
		</ul>

{{#if this.ownerBool}}
<div>OWNER AND OFFICERS</div>
<ul class="manageGuildMembersList" id="membersList">
	<li>
		<div class="image-container">
			<img class="memberProfilePicture" src={{this.owner.image_url}}></img>
		</div>
		<span>{{this.owner.nickname}} (Owner)</span><button class="button" id="kickMember" value="{{this.owner.id}}">Kick</button>
	</li>
	{{#each this.officers}}
	<li>
		<div class="image-container">
			<img class="memberProfilePicture" src={{this.image_url}}></img>
		</div>
		<span>{{this.nickname}} </span><button class="button" id="kickMember" value="{{this.id}}">Kick</button>
	</li>
	{{/each}}
</ul>
{{/if}}

<div>MEMBERS</div>
<ul class="manageGuildMembersList" id="membersList">
	{{#each this.members}}
	<li>
		<div class="image-container">
			<img class="memberProfilePicture" src={{this.image_url}}></img>
		</div>
		<span>{{this.nickname}}</span><button class="button" id="kickMember" value="{{this.id}}">Kick</button>
	</li>
	{{/each}}
</ul>
</div>
<button class="button" id="inviteMemberModalButton">Invite someone</button>


<div class="modal modalAddFriendsToGuild" id="inviteMemberModal" style="display: none;">
	<div class="background"></div>
	<div class="modalOpen">
		<div class="close closeModal">
			<img src="./icons/close.svg" id="close"></img>
		</div>
		<label class="label labelSelectFriends" for="search">Select friends</label>
		<input class="textInput modalSearchChannels modalSearchAddFriendsToChannel" type="text" id="nonMemberToInvite" placeholder="Research" for={{id}}></input>
		<div class="friends modalSearchAddFriendsToChannel" id="inviteMemberResult">
			{{#each member}}
			<div class="eachFriend eachFriendModalCreateChannel" for="addfriends{{id}}">
				<div class="left">
					<div class="image-container">
						<img src={{image_url}} id="image_url" class="image_url"></img>
					</div>
					<p class="anagram_nickname">{{anagram}} {{nickname}}</p>
				</div>
				<div class="right">
					<label class="checkboxlabel" for="{{checkboxId}}"></label>
					<input type="checkbox" class="checkbox" id="addfriends{{id}}" value="{{id}}"></input>
				</div>
			</div>
			{{/each}}
		</div>
		<div class="button-container buttons">
			<button class="validation-buttons button validate-add-friends inviteMember" for="{{guildId}}">Invite</button>
		</div>
	</div>
</div>
</div>
