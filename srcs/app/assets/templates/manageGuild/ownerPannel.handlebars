
<div class="closeParams exitButton" id="ManageGuildExitButton" onclick="window.location='#guild';">
	<img src="./icons/esc.svg" class="">
</div>
<div class="manageGuildTitle">
	<div class="title">
		<span id="guildNameIntro"> MANAGE
		<a href="#guild/{{this.guild.id}}/">{{this.guild.name}}</a></span>
		<span id="guildAnagramIntro">[{{this.guild.anagram}}]</span>
		<div id='manageGuildErrorDiv'></div>
	</div>
<div class="manageGuildForm">

<div class="manageGuildForm">
<div class="subtitle">GUILD NAME</div>
<label for="guildName">
<div>	<input id="guildName" class="manageGuildTextInput" type="text"></input> </div>
</label>
<div id="nameError" class="errorMessage"></div>
<div><button class="updateGuildName save">Save</button></div>
<div></div>
<div class="subtitle">ANAGRAM</div>
<label for="guildAnagram">
	<div><input id="guildAnagram" class="manageGuildTextInput" type="text"></input></div>
</label>
<div id="anagramError" class="errorMessage"></div>
<div><button class="updateGuildAnagram save">Save</button></div>
<div></div>
</div>

<div>OFFICERS</div>
<ul class="manageGuildMembersList" id="officersList">
	{{#each this.officers}}
	<li>
		<div class="image-container">
			<img class="memberProfilePicture" src={{this.image_url}}></img>
		</div>
		<span>{{this.nickname}}</span><button class="button" id="relegateMember" value="{{this.id}}">Relegate</button>
	</li>
	{{/each}}
</ul>

<div>MEMBERS</div>
<ul class="manageGuildMembersList" id="membersList">
	{{#each this.members}}
	<li>
		<div class="image-container">
			<img class="memberProfilePicture" src={{this.image_url}}></img>
		</div>

		<span>{{this.nickname}}</span><button class="button" id="promoteMember" value="{{this.id}}">Promote</button>
	</li>
	{{/each}}
</ul>
